<h1>All Items</h1>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><img src="<%= item.image(:thumb) %>"></td>
        <td><span class="item_title"><%= item.title %><span><td><%= number_to_currency(item.price) %></td></td>
        <td><%= item.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
