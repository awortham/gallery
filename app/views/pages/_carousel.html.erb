<div id="myCarousel" class="carousel slide" data-ride="carousel">
  
  <ol class="carousel-indicators">
    <% @home.images.each_with_index do |image, index| %>
      <li data-target="#myCarousel" data-slide-to='<%= index %>' class='<%= 'active' if index.zero? %>'</li>
    <% end %>
  </ol>

  <div class="carousel-inner" style="  height: 739px;">
    <% @home.images.each_with_index do |image, index| %>
      <div class='item <%= "#{ index.zero? ? 'active' : '' }" %> '>
        <img src="<%= image.url %>" alt="First slide">
          <div class="container">
            <div class="carousel-caption">
              <h1><%= image.tagline %></h1>
              <p><%= image.caption %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div><!-- /.carousel -->
</div>
