<div class="cart-view">
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
  <h1 class="page-header">Your Cart</h1>
  <table id="cart" class="table table table-condensed">
    <thead>
      <tr>
        <th style="width:50%">Item</th>
        <th style="width:10%">Price</th>
        <th style="width:8%">Quantity</th>
        <th style="width:22%" class="text-center">Subtotal</th>
        <th style="width:10%"></th>
      </tr>
    </thead>
    <% @cart.line_items.each_pair do |item_id, quantity|  %>
    <tbody>
      <tr>
        <td data-th="Product">
          <div class="row">
            <div class="col-sm-2 hidden-xs"><img src="<%= find_item(item_id).image(:medium) %>" alt="..." class="img-responsive"/></div>
            <div class="col-sm-10">
              <h4 class="nomargin"><%= find_item(item_id).title %></h4>
              <p><%= find_item(item_id).description %></p>
            </div>
          </div>
        </td>
        <%= form_tag("/line_items/#{item_id}", method: :put) do %>

        <td data-th="Price"><%= number_to_currency(find_item(item_id).price) %></td>
        <td data-th="Quantity">
          <%= number_field_tag("quantity", quantity, in: 1..20, value: quantity) %>
        </td>

        <td data-th="Subtotal" class="text-center"><%= number_to_currency(cart.line_item_total(item_id, quantity)) %></td>
        <td class="actions" style="display: inline;">
          <%= submit_tag "Save", class: "btn btn-info btn-sm" %>
          <%= link_to "Remove", line_item_path(@business.slug, item_id), method: :delete, class: "btn btn-danger btn-sm" %>
        </td>
        <% end %>
      </tr>
    </tbody>
    <tfoot>
    <% end %>
      <tr class="visible-xs">
        <td class="text-center"><strong>Total 1.99</strong></td>
      </tr>
      <tr>
        <td><a href="/" class="btn btn-warning"><i class="fa fa-angle-left"></i> Continue Shopping</a></td>
        <td colspan="2" class="hidden-xs"></td>
        <td class="hidden-xs text-center"><strong>Total <%= number_to_currency(cart.subtotal) %></strong></td>
      </tr>
    </tfoot>
  </table>
</div>
</div>
